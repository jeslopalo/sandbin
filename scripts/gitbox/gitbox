#!/usr/bin/env sandbash

source "${SANDBIN_HOME}/scripts/lib/colors.lib.zsh"
source "${SANDBIN_HOME}/scripts/lib/git-functions.lib.zsh"

source "${SANDBIN_HOME}/scripts/gitbox/lib/gitbox.lib.zsh"
source "${SANDBIN_HOME}/scripts/gitbox/lib/gitbox.init.zsh"
source "${SANDBIN_HOME}/scripts/gitbox/lib/gitbox.setup.zsh"
source "${SANDBIN_HOME}/scripts/gitbox/lib/gitbox.ranking.zsh"
source "${SANDBIN_HOME}/scripts/gitbox/lib/gitbox.changelog.zsh"

function usage() {
    local mode="$1"

    [ "$mode" = "help" ] && printf "${CYAN}It provides several utilities to work with git${NORMAL}\n"
    printf "usage: ${BOLD}gitbox${NORMAL} [init | setup | changelog | ranking] [-h, --help]\n"

    if [ "$mode" = "help" ]; then
        printf "\n"
        printf "    ${BOLD}init${NORMAL}        Initialize a new git repository (git & git flow)\n"
        printf "    ${BOLD}setup${NORMAL}       Provide several utilities to configure git\n"
        printf "    ${BOLD}changelog${NORMAL}   Generate changelog information\n"
        printf "    ${BOLD}ranking${NORMAL}     Display the github committers rank for a user\n"
        printf "\nOptions:\n"
        printf "    ${BOLD}-h, --help${NORMAL}        Display this help\n"
    fi
}

function gitbox() {

    if [ $# = 0 ]; then
        printf "${RED}Sorry! I need a gitbox subcommand to continue :(${NORMAL}\n"
        usage;
        exit 1;
    fi

    while [[ $# > 0 ]];  do
        key="$1"

        case $key in
            init)
                shift
                gitbox-init "$@"
                exit $?
            ;;
            setup)
                shift
                gitbox-setup "$@"
                exit $?
            ;;
            changelog)
                shift
                gitbox-changelog "$@"
                exit $?
            ;;
            ranking)
                shift
                gitbox-ranking "$@"
                exit $?
            ;;
            -h|--help)
                usage "help"
                exit 0
            ;;
            *)
                printf "${RED}Ouch! Unknown option '%s'. Please try agan!${NORMAL}\n" "$key"
                usage
                exit 1
            ;;
        esac

        shift;
    done
}

gitbox "$@"
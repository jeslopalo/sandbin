#!/usr/bin/env sandbash

set -e

function usage() {
    printf "${YELLOW}%s${NORMAL}\n" "usage: sandbin [upgrade] [-v | --version] [-h | --help]"
}

if [ $# = 0 ]; then
    printf "${RED}%s${NORMAL}\n" "Sorry! I need a sandbin command to continue :("
    usage;
    exit 0;
fi

while [[ $# > 0 ]];  do
    key="$1"

    case $key in
        upgrade)
            sandbin_upgrade
            exit 1
        ;;
        -v|--version)
            sandbin_version
            exit 1
        ;;
        -h|--help)
            usage
            exit 1
        ;;
    esac
done

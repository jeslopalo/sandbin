#!/usr/bin/env sandbash

source "$SANDBIN_HOME/scripts/sandbin/lib/sandbin.lib.zsh"
source "$SANDBIN_HOME/scripts/sandbin/lib/sandbin.reload.zsh"
source "$SANDBIN_HOME/scripts/sandbin/lib/sandbin.version.zsh"
source "$SANDBIN_HOME/scripts/sandbin/lib/sandbin.upgrade.zsh"

function usage() {
    printf "${YELLOW}%s${NORMAL}\n" "usage: sandbin [upgrade] [-v | --version] [-h | --help]"
}

function sandbin() {

    if [ $# = 0 ]; then
        printf "${RED}%s${NORMAL}\n" "Sorry! I need a sandbin command to continue :("
        usage;
        exit 1;
    fi

    while [[ $# > 0 ]];  do
        key="$1"

        case $key in
            upgrade)
                shift
                sandbin_upgrade "$@"
                exit $?
            ;;
            reload)
                shift
                sandbin_reload "$@"
                exit $?
            ;;
            -v|--version)
                shift
                sandbin_version "$@"
                exit $?
            ;;
            -h|--help)
                usage
                exit 0
            ;;
            *)
                printf "${RED}%s${NORMAL}\n" "Ouch! Unknown option '$key'. Please try agan!"
                usage
                exit 1
            ;;
        esac
        shift;
    done

}

sandbin "$@"


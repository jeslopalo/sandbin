#compdef sandbin

_sandbin() {

    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments -C \
        ':command:->command' \
        '*::options:->options'

    case $state in
        (command)
            local -a subcommands;

            subcommands=(
                'upgrade:upgrade sandbin shell utilities.'
                'reload:reload sandbin shell utilities.'
            )

            _describe -t commands 'sandbin' subcommands
            _arguments \
                "(-h --help)"{-h,--help}"[Show help for sandbin usage]" \
                "(-v --version)"{-v,--version}"[Show the used sandbin version]"
        ;;

        (options)
			case $line[1] in

				(upgrade)
                    _arguments \
                        "(-h --help)"{-h,--help}"[Show help for sandbin usage]"
				;;
				(reload)
                    _arguments \
                        "(-h --help)"{-h,--help}"[Show help for sandbin usage]"
                ;;
			esac
		;;
    esac
}

_sandbin "$@"
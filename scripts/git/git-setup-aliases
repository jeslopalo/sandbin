#!/usr/bin/env sandbash

function usage() {
	printf "${YELLOW}%s${NORMAL}\n" "usage: git-aliases [--system|--global|--local]"
}

if [ $# -lt 1 ]; then
	usage
	exit 1
fi

scope="$1"

set -e

file="default"

source "${SANDBIN_HOME}/scripts/lib/git-functions.lib.zsh"
source "${SANDBIN_HOME}/dotfiles/gitaliases/${file}.gitaliases"
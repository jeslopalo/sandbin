#!/usr/bin/env sandbash

function usage() {
	printf "${YELLOW}%s${NORMAL}\n" "usage: git-init [--system|--global|--local] \"Name Surname\" user@name.es"
}

if [ $# -lt 3 ]; then
	usage
	exit 1
fi

scope="$1"
username="$2"
email="$3"

set -e

printf "Configuring user.name='${BOLD}${GREEN}$username${NORMAL}' & user.email='${BOLD}${GREEN}$email${NORMAL}' as '${BOLD}${YELLOW}$scope${NORMAL}' repository properties...\n"
git config $scope user.email "$email"

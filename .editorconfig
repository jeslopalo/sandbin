; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = LF
trim_trailing_whitespace = true
insert_final_newline = true

[*.*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = LF
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = LF
trim_trailing_whitespace = true
insert_final_newline = true
